@model DLL.Models.Message

@{
    ViewBag.Title = "Create message";
    Layout = "_Layout";
}


<form method="post">
    <h2>Create message</h2>
    <div>
        <input asp-for="Text" placeholder="Message text"
               minlength="1" required class="w-75"/>
    </div>
    <div asp-validation-summary=All class="text-danger"></div>
    <div>
        <button type="submit">Create</button>
    </div>
</form>
