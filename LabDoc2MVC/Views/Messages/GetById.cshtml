@model DLL.Models.Message?

@{
    ViewBag.Title = "Message";
    Layout = "_Layout";
}

<h2>Selected message</h2>

<table class="table-bordered">
    <thead>
    <tr>
        <th class="w-25">Id</th>
        <th class="w-75">Text</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model?.Id</td>
            <td>@Model?.Text</td>
            <td><a asp-controller="Messages" asp-action="Update" asp-route-id="@Model?.Id">Update</a></td>
            <td><a asp-controller="Messages" asp-action="Delete" asp-route-id="@Model?.Id">Delete</a></td>
        </tr>
    </tbody>
</table>